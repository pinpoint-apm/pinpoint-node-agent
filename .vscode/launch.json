    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "run unittest",
            "program": "${workspaceFolder}/node_modules/tape/bin/tape",
            "args": [
                "./test/**/*.test.js"
            ],
        },    
        {
            "type": "node",
            "request": "launch",
            "name": "Debug current file",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
        } 
    ]
}